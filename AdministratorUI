    String string = "";
        InputStreamReader input = new InputStreamReader(System.in);
        BufferedReader reader = new BufferedReader(input); 
      // read in user input 
       try
       {
        string = reader.readLine(); 
         }
       catch(Exception e){}
       return Integer.parseInt(string);
  }
   public int getCustomerId()
